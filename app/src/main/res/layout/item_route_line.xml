<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:id="@+id/ll_item_line" >
    <TextView 
        android:id="@+id/tv_item_line_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/tv_line_num"/>
    <TextView 
        android:id="@+id/tv_item_line_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="2dp"
        android:textSize="@dimen/ed_sub_info"/>
    <TextView 
        android:id="@+id/tv_item_line_dist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="2dp"
        android:textSize="@dimen/tv_line_dist"/>
    

</LinearLayout>
